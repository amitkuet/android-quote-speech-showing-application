<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/common_25dp"
        android:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/common_20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Push Notification"
                android:layout_marginStart="@dimen/edit_profile_personalData_marginLeft"
                android:layout_marginEnd="@dimen/edit_profile_personalData_marginRight"
                android:layout_marginLeft="@dimen/edit_profile_personalData_marginLeft"
                android:layout_marginRight="@dimen/edit_profile_personalData_marginRight"
                android:textStyle="bold"/>

            <ToggleButton
                android:id="@+id/toggleButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/edit_profile_personalData_marginLeft"
                android:layout_marginEnd="@dimen/edit_profile_personalData_marginRight"
                android:layout_marginLeft="@dimen/edit_profile_personalData_marginLeft"
                android:layout_marginRight="@dimen/edit_profile_personalData_marginRight"
                android:text="ToggleButton1"
                android:textColor="@color/colorWhite"
                android:textOff="Off"
                android:textOn="On" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/common_20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Theme Color"
                android:layout_marginStart="@dimen/edit_profile_personalData_marginLeft"
                android:layout_marginEnd="@dimen/edit_profile_personalData_marginRight"
                android:layout_marginLeft="@dimen/edit_profile_personalData_marginLeft"
                android:layout_marginRight="@dimen/edit_profile_personalData_marginRight"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/colorPicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/edit_profile_personalData_marginLeft"
                android:layout_marginEnd="@dimen/edit_profile_personalData_marginRight"
                android:layout_marginLeft="@dimen/edit_profile_personalData_marginLeft"
                android:layout_marginRight="@dimen/edit_profile_personalData_marginRight"
                android:padding="@dimen/common_13dp"
                android:gravity="left"
                android:text="Theme Color"
                android:textColor="@color/colorWhite"
                android:background="@drawable/button_signin"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>