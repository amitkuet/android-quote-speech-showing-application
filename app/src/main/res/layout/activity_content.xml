<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/common_25dp"
        android:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/common_20dp">

            <TextView
                android:id="@+id/itemName"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/edit_profile_personalData_editext_height"
                android:layout_marginStart="@dimen/edit_profile_personalData_marginLeft"
                android:layout_marginEnd="@dimen/edit_profile_personalData_marginRight"
                android:layout_marginLeft="@dimen/edit_profile_personalData_marginLeft"
                android:layout_marginRight="@dimen/edit_profile_personalData_marginRight"
                android:text="ItemName"
                android:padding="@dimen/common_13dp"
                android:gravity="center_horizontal"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/shareIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/edit_profile_personalData_marginLeft"
                android:layout_marginEnd="@dimen/edit_profile_personalData_marginRight"
                android:layout_marginLeft="@dimen/edit_profile_personalData_marginLeft"
                android:layout_marginRight="@dimen/edit_profile_personalData_marginRight"
                android:src="@mipmap/ic_share_black_36dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/common_20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp">

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/round_shape_button"
                android:text="@string/flight_booking_fragment_travellers_minus_button_text"
                android:textSize="@dimen/common_text_size_30sp"
                android:layout_marginRight="@dimen/common_30dp"/>

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/round_shape_button"
                android:text="@string/flight_booking_fragment_travellers_plus_button_text"
                android:textSize="@dimen/common_text_size_30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/common_20dp">

            <TextView
                android:id="@+id/itemContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/edit_profile_personalData_marginLeft"
                android:layout_marginEnd="@dimen/edit_profile_personalData_marginRight"
                android:layout_marginLeft="@dimen/edit_profile_personalData_marginLeft"
                android:layout_marginRight="@dimen/edit_profile_personalData_marginRight"
                android:padding="@dimen/common_13dp"
                android:background="@drawable/text_input_bg_create_account"
                android:text="ItemContent hsabdjk sahbdjkas ajsdjkas jhbasjdkas jasbndjkas jkashdjkas jkasdjkas jkhansjkdn jasdjk njkashdj nkjasdbjksabn "
                android:singleLine="false"
                android:minHeight="200dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/common_20dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/edit_profile_personalData_marginLeft"
                android:layout_marginEnd="@dimen/edit_profile_personalData_marginRight"
                android:layout_marginLeft="@dimen/edit_profile_personalData_marginLeft"
                android:layout_marginRight="@dimen/edit_profile_personalData_marginRight"
                android:padding="@dimen/common_13dp"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>