<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/common_25dp"
        android:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/common_20dp">

            <TextView
                android:id="@+id/itemName"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/edit_profile_personalData_editext_height"
                android:layout_marginStart="@dimen/edit_profile_personalData_marginLeft"
                android:layout_marginEnd="@dimen/edit_profile_personalData_marginRight"
                android:layout_marginLeft="@dimen/edit_profile_personalData_marginLeft"
                android:layout_marginRight="@dimen/edit_profile_personalData_marginRight"
                android:text="ItemName"
                android:padding="@dimen/common_13dp"
                android:gravity="center_horizontal"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/shareIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/edit_profile_personalData_marginLeft"
                android:layout_marginEnd="@dimen/edit_profile_personalData_marginRight"
                android:layout_marginLeft="@dimen/edit_profile_personalData_marginLeft"
                android:layout_marginRight="@dimen/edit_profile_personalData_marginRight"
                android:src="@mipmap/ic_share_black_36dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/common_20dp">

            <TextView
                android:id="@+id/itemContent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_profile_personalData_editext_height"
                android:layout_marginStart="@dimen/edit_profile_personalData_marginLeft"
                android:layout_marginEnd="@dimen/edit_profile_personalData_marginRight"
                android:layout_marginLeft="@dimen/edit_profile_personalData_marginLeft"
                android:layout_marginRight="@dimen/edit_profile_personalData_marginRight"
                android:padding="@dimen/common_13dp"
                android:background="@drawable/text_input_bg_create_account"
                android:text="ItemContent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/common_20dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/edit_profile_personalData_marginLeft"
                android:layout_marginEnd="@dimen/edit_profile_personalData_marginRight"
                android:layout_marginLeft="@dimen/edit_profile_personalData_marginLeft"
                android:layout_marginRight="@dimen/edit_profile_personalData_marginRight"
                android:padding="@dimen/common_13dp"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>