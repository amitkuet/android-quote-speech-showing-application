<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:ignore="Overdraw">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/authentication_login_btn_50dp"
            android:orientation="horizontal"
            tools:ignore="UselessLeaf">

        </LinearLayout>

        <ListView
            android:id="@+id/menuList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin_35dp"
            android:layout_marginRight="@dimen/common_margin_35dp"
            android:divider="@null"
            android:dividerHeight="@dimen/common_height_0dp"
            android:background="@color/colorWhite"
            android:focusable="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorEditProfileBottom">

    </LinearLayout>

</LinearLayout>
